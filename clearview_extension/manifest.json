{
  "manifest_version": 3,
  "name": "ClearView",
  "version": "1.0",
  "description": "AR-based real-time captioning for deaf and hard-of-hearing users.",
  "permissions": ["activeTab"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
